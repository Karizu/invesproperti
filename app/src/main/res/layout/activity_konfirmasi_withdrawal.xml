<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".presentation.portofolio.withdrawal.KonfirmasiWithdrawalActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F3F3F3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackground"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/btn_cs"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackground"
            android:padding="15dp"
            android:src="@drawable/ic_cs_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/titilliumweb_bold"
            android:gravity="center"
            android:text="Tarik Saldo"
            android:textColor="@color/Black"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_finger_print"
        android:layout_width="80.5dp"
        android:layout_height="93dp"
        android:layout_above="@+id/tv_content"
        android:layout_centerInParent="true"
        android:src="@drawable/fingerprint"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="268dp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="Pindai Sidik Jari"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/titilliumweb_regular"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="Atau gunakan password"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/frame_pass"
        android:fontFamily="@font/titilliumweb_regular"/>


    <FrameLayout
        android:id="@+id/frame_pass"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rectangle_1"
        >

        <TextView
            android:id="@+id/etKataSandi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="13dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/pass"
            android:layoutDirection="ltr"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:fontFamily="@font/titilliumweb_regular"
            android:drawableEnd="@drawable/show_password"/>

    </FrameLayout>

</RelativeLayout>