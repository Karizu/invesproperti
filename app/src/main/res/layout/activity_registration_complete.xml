<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.auth.RegistrationCompleteActivity">

    <ImageView
        android:visibility="gone"
        android:id="@+id/img_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_close"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="26dp"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_name"
        android:layout_alignParentTop="true">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:lottie_rawRes="@raw/fireworks"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            app:lottie_rawRes="@raw/fireworks"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/success"
            app:lottie_loop="false"
            app:lottie_autoPlay="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            app:lottie_rawRes="@raw/fireworks"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:lottie_rawRes="@raw/fireworks"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:lottie_rawRes="@raw/fireworks"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_type_investor"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hallo, "
            android:textColor="@color/black_primary"
            android:textSize="18sp"
            android:fontFamily="@font/titilliumweb_regular"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rizki!"
            android:textColor="@color/green_primary"
            android:textSize="18sp"
            android:fontFamily="@font/titilliumweb_semibold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_type_investor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_lanjut"
        android:gravity="center"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="Selamat Registrasi Anda Berhasil..\n\nSilahkan tekan tombol untuk melanjutkan"
        android:textColor="@color/black_primary"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:fontFamily="@font/titilliumweb_regular"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btn_lanjut"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Lanjutkan"
        android:textSize="18sp"
        android:background="@drawable/bg_round_green"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:fontFamily="@font/titilliumweb_bold"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"/>

</RelativeLayout>