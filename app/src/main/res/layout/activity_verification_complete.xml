<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".presentation.verification.VerificationCompleteActivity">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_close"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="26dp"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            app:lottie_rawRes="@raw/success"
            app:lottie_loop="false"
            app:lottie_autoPlay="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/fireworks"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_terimakasih"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/relativeLayout"
        android:gravity="center"
        android:layout_marginTop="36dp"
        android:text="@string/terima_kasih"
        android:textColor="@color/black_primary"
        android:textSize="20sp"
        android:fontFamily="@font/titilliumweb_semibold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_terimakasih"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:text="@string/verifikasi_complete"
        android:textColor="@color/black_primary"
        android:textSize="16sp"
        android:fontFamily="@font/titilliumweb_regular"/>


</RelativeLayout>