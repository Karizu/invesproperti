<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/frame_start_date_business"
    android:layout_width="match_parent"
    android:layout_marginTop="14dp"
    android:layout_height="46dp"
    android:paddingStart="14dp"
    android:background="@drawable/bg_round_field_verification"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_gallery"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:layout_marginEnd="13.5dp"
            android:padding="8dp"
            android:src="@drawable/ic_calendar"/>

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingEnd="16dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="image.jpeg #1"
            android:fontFamily="@font/titilliumweb_regular"
            android:textColor="@color/black_primary"/>

        <ImageView
            android:id="@+id/btn_remove"
            android:layout_width="23.3dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:layout_marginEnd="13.5dp"
            android:src="@drawable/ic_remove_image"/>

    </LinearLayout>

</FrameLayout>