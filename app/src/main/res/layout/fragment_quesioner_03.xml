<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@id/textView"
        android:layout_marginStart="26dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bg_round_field_verification"
        android:paddingStart="14dp"
        android:paddingEnd="14dp">

        <EditText
            android:id="@+id/rb_menikah"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:fontFamily="@font/titilliumweb_regular"
            android:hint="Pekerjaan"
            android:textColor="@color/grey_text"
            android:textSize="16sp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/ic_close" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/harga_lot"
        android:checkedButton="@id/rb_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/bg_round_field_green"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">

                <RadioButton
                    android:id="@+id/rb_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/titilliumweb_regular"
                    android:gravity="center"
                    android:text="@string/_1_tahun" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/bg_round_field_green"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">

                <RadioButton
                    android:id="@+id/rb_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/titilliumweb_regular"
                    android:gravity="center"
                    android:text="1 - 5 Tahun" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/bg_round_field_green"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">

                <RadioButton
                    android:id="@+id/rb_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/titilliumweb_regular"
                    android:gravity="center"
                    android:text="> 5 Tahun" />

            </FrameLayout>

        </LinearLayout>

    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_group"
        android:layout_marginStart="26dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/titilliumweb_regular"
        android:gravity="center_vertical"
        android:text="@string/string_quesioner_03_1"
        android:textColor="@color/black_primary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/harga_lot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/titilliumweb_regular"
        android:gravity="center_vertical"
        android:text="@string/string_quesioner_03"
        android:textColor="@color/black_primary"
        android:textSize="18sp" />

</RelativeLayout>